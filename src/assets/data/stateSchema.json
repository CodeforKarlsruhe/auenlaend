{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "state": {
            "type": "string",
            "value": null,
            "comment": "Conversation state identifier (e.g. current dialog state)"
        },
        "intent": {
            "type": "string",
            "value": null,
            "comment": "Detected user intent name"
        },
        "timestamp": {
            "type": "string",
            "value": null,
            "comment": "ISO 8601 timestamp of the event"
        },
        "session": {
            "type": "string",
            "value": null,
            "comment": "Session identifier for the conversation"
        },
        "context": {
            "type": "object",
            "required": ["sequence"],     
            "value": null,
            "comment": "Context object containing auxiliary fields",
            "properties": {
                "language": {
                    "type": "string",
                    "value": "de",
                    "comment": "Language code for the conversation (default: 'de')"
                },
                "sequence": {
                    "type": "number",
                    "value": null,
                    "comment": "Sequence number within the session or conversation"
                },
                "origin": {
                    "type": "string",
                    "value": null,
                    "comment": "Originating state to route back, if required."
                },
                "entity": {
                    "type": "string",
                    "value": null,
                    "comment": "Specifier for specific item, like type (e.g. tier) or species (e.g wasserfrosch)"
                },
                "output": {
                    "type": "string",
                    "value": null,
                    "comment": "Output text or message to be conveyed to the user"
                },
                "options": {
                    "type": "array",
                    "items": {},
                    "comment": "Optional list of selectable options or suggestions"
                },
                "labels": {
                    "type": "array",
                    "items": {},
                    "comment": "Optional list of labels or tags associated with the options. Same order as options"
                },
                "values": {
                    "type": "array",
                    "items": {},
                    "comment": "Optional list of values. Same order as options"
                }
            }
        }
    },
    "required": [
        "state",
        "intent",
        "timestamp",
        "session"
    ]
}
